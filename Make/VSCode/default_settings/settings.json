{
    "git.ignoreLimitWarning": true,
    //"editor.formatOnSave": true,
    "files.associations": {
        "*.ros2": "xml",
        "*.rsi2": "xml",
        "*.kmc": "plaintext",
        "*.moc": "cpp",
        "*.def": "cpp",
        "*.tcc": "cpp"
    },

    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs":"active",
    
    "actionButtons": {
        "loadNpmCommands": false, // Disables automatic generation of actions for npm commands.
        "commands": [
            {
                "name": "Build Sim Dev",
                "cwd": "${workspaceFolder}/Make/Linux",
                "color": "white",
                "singleInstance": true,
                "command": "./compile SimRobot" // This is executed in the terminal.
            },
            {
                "name": "Run Sim Dev",
                "cwd": "${workspaceFolder}/Build/Linux/SimRobot/Develop",
                "color": "white",
                "singleInstance": true,
                "command": "./SimRobot" // This is executed in the terminal.
            },
            {
                "name": "Build Sim Release",
                "cwd": "${workspaceFolder}/Make/Linux",
                "color": "white",
                "singleInstance": true,
                "command": "./compile SimRobot Release" // This is executed in the terminal.
            },
            {
                "name": "Run Sim Release",
                "cwd": "${workspaceFolder}/Build/Linux/SimRobot/Release",
                "color": "white",
                "singleInstance": true,
                "command": "./SimRobot" // This is executed in the terminal.
            },
            {
                "name": "bush",
                "cwd": "${workspaceFolder}/Build/Linux/bush/Release",
                "color": "white",
                "singleInstance": true,
                "command": "./bush" // This is executed in the terminal.
            }
        ]
    }
}